<tr>
    <td valign="top">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
                <td>
                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                        <tr>
                            <td width="65%"><p style="font-size:32px; color:#777777; text-decoration:underline; text-align:center; margin:0px 0px 0px 0px; font-weight:bold;">SECURITAS INDIA</p></td>
                            <td width="29%" valign="top" style="background-color:@Model.FinalColorCode;width:132px; height:73px; padding:0px 0px 0px 0px; border-radius:50%; border:4px solid #000; transform: rotate(-32deg); -ms-transform: rotate(-32deg); -webkit-transform: rotate(-32deg);">&nbsp;</td>                           
                            <td width="6%" align="right"><img src='@Url.Content("~/Images/logo.jpg")' width="71" height="40"></td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                @if (Model.FinalReport)
                {
                    <td valign="top" align="center"><p style="text-align: center;border: 2px solid #808080;box-shadow: 0px 1px 2px 1px #c0c0c0;color: #808080;text-transform: uppercase;padding: 5px;width: 35%;font-weight: bolder;margin: 0px 0px 20px 0px;letter-spacing: 0.5px;font-size:14px;">REPORT TYPE INTERIM</p></td>
                }
                else
                {
                    <td valign="top" align="center"><p style="text-align: center;border: 2px solid #808080;box-shadow: 0px 1px 2px 1px #c0c0c0;color: #808080;text-transform: uppercase;padding: 5px;width: 35%;font-weight: bolder;margin: 0px 0px 20px 0px;letter-spacing: 0.5px;font-size:14px;">REPORT TYPE FINAL</p></td>
                }
            </tr>
            <tr>
                <td valign="top" style="font-size:23px;  color:#000080; text-align:center; font-weight:600; text-decoration:underline;">Final Background Report-Executive Summary</td>     
            </tr>
            <tr>
                <td valign="top" height="30">&nbsp;</td>
            </tr>
            <tr>
                <td>
                    <table width="100%" border="1" cellpadding="2" cellspacing="5">
                        <tr>
                            <td height="20" colspan="4" align="center" style=" color-adjust:exact; background:#c0c0c0; font-size:17px;"><strong>BACKGROUND PROFILE</strong></td>
                        </tr>
                        <tr>
                            <td style="padding-left:5px;font-weight:bold;" width="30%">Employee Name</td>
                            <td style="padding-left:5px;"><label for="">@Model.PersonalName</label></td>
                        </tr>
                        <tr>
                            <td style="padding-left:5px;font-weight:bold;">Employee Number</td>
                            <td style="padding-left:5px;"><label for="">@Model.EmploymentId</label></td>
                        </tr>
                        <tr>
                            <td style="padding-left:5px;font-weight:bold;">Date of Birth</td>
                            <td style="padding-left:5px;"><label for="">@if (Model.DOB != null) { <span>@Model.DOB.ToString("dd/MMM/yyyy")</span> } else { <span>N/A</span> }</label></td>
                        </tr>
                        <tr>
                            <td style="padding-left:5px;font-weight:bold;">Date of Initiated</td>
                            <td style="padding-left:5px;"><label for="">@if (Model.CreatedDate != null) { <span>@Model.CreatedDate.ToString("dd/MMM/yyyy")</span> } else { <span>N/A</span> }</label></td>
                        </tr>
                        <tr>
                            <td style="padding-left:5px;font-weight:bold;">Start Date (Per IBM Log)</td>
                            <td style="padding-left:5px;"><label for="">@if (Model.AllocatedDate != null) { <span>@Model.AllocatedDate.ToString("dd/MMM/yyyy")</span> } else { <span>N/A</span> }</label></td>
                        </tr>
                        <tr>
                            <td style="padding-left:5px;font-weight:bold;">Date Report Due</td>
                            <td style="padding-left:5px;"><label for="">@if (Model.DeliveryDate != null) { <span>@Model.DeliveryDate.ToString("dd/MMM/yyyy")</span> } else { <span>N/A</span> }</label></td>
                        </tr>
                        <tr>
                            <td style="padding-left:5px;font-weight:bold;">Date Report Sent On</td>
                            <td style="padding-left:5px;"><label for="">@if (Model.ReportDate != null) { <span>@Model.ReportDate.ToString("dd/MMM/yyyy")</span> } else { <span>N/A</span> }</label></td>
                        </tr>
                        <tr>
                            <td style="padding-left:5px;font-weight:bold;">With SLA or Over SLA</td>
                            <td style="padding-left:5px;">  
                            @if ((Model.DeliveryDate != null && Model.ReportDate != null) && Model.DeliveryDate < Model.ReportDate)
                            {
                                <label for=""> Over SLA </label>
                            }
                            else
                            {
                                <label for=""> With SLA </label>
                            }
                            </td>
                        </tr>
                        <tr>
                            <td style="padding-left:5px;font-weight:bold;">If Over SLA - Justification</td>
                            <td style="padding-left:5px;"><label for=""></label></td>
                        </tr>
                        <tr>
                            <td style="padding-left:5px;font-weight:bold;">Final Color Code</td>
                            <td style="padding-left:5px;"><label for="" style="color:@Model.FinalColorCode">@Model.FinalColor</label></td>
                        </tr>
                        <tr>
                            <td style="padding-left:5px;font-weight:bold;">Internal/Vendor Ref Number (if applicable)</td>
                            <td style="padding-left:5px;"><label for="">@Model.CompanyRefNo</label></td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </td>
</tr>