<tr>
    <td valign="top">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
                <td>
                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                        <tr>
                            @if (Model.FinalReport)
                            {
                                <td width="94%"><p style="font-size:32px; color:#777777; text-decoration:underline; text-align:center; margin:0px 0px 0px 0px; font-weight:bold;">SECURITAS INDIA</p> <p  style="text-align: center;border: 2px solid #808080;box-shadow: 0px 1px 2px 1px #c0c0c0;color: #808080;text-transform: uppercase;padding: 5px;width: 35%;font-weight: bolder;margin: 25px 0px 20px 183px;letter-spacing: 0.5px;font-size:14px;">REPORT TYPE INTERIM</p></td>
                            }
                            else
                            {
                                <td width="94%"><p style="font-size:32px; color:#777777; text-decoration:underline; text-align:center; margin:0px 0px 0px 0px; font-weight:bold;">SECURITAS INDIA</p> <p  style="text-align: center;border: 2px solid #808080;box-shadow: 0px 1px 2px 1px #c0c0c0;color: #808080;text-transform: uppercase;padding: 5px;width: 35%;font-weight: bolder;margin: 25px 0px 20px 183px;letter-spacing: 0.5px;font-size:14px;">REPORT TYPE FINAL</p></td>
                            }
                            <td width="6%" align="right"><img src='@Url.Content("~/Images/logo.jpg")' width="71" height="40"></td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr><td height="30">&nbsp;</td></tr>
            <tr>
                <td>
                    <table width="100%" border="1" cellpadding="2" cellspacing="5">
                        <tr>
                            <td height="20" colspan="4" align="center" style="font-size:18px; color-adjust:exact; background:#c0c0c0;"><strong>Background Screening Report</strong></td>
                        </tr>
                        <tr>
                            <td style="padding-left:5px;font-weight:bold; color-adjust:exact; background:#c0c0c0;" width="30%" >Name of the Candidate</td>
                            <td colspan="3" align="center" height="30">@Model.PersonalName</td>
                        </tr>
                        <tr>
                            <td style="padding-left:5px;font-weight:bold; color-adjust:exact; background:#c0c0c0;" >Vendor Reference</td>
                            <td style="padding-left:5px;"><label for="">@Model.CompanyRefNo</label></td>
                            <td style="padding-left:5px;font-weight:bold; color-adjust:exact; background:#c0c0c0;" >Date Initiated</td>
                            <td style="padding-left:5px;"><label for=""> @if (Model.CreatedDate != null) { <span>@Model.CreatedDate.ToString("dd/MMM/yyyy")</span> } else { <span>N/A</span> }</label></td>
                        </tr>
                        <tr>
                            <td style="padding-left:5px;font-weight:bold; color-adjust:exact; background:#c0c0c0;" >Entity (BPS / TEIL)</td>
                            <td style="padding-left:5px;"><label for="">@Model.ClientName</label></td>
                            <td style="padding-left:5px;font-weight:bold; color-adjust:exact; background:#c0c0c0;" >Date of Report</td>
                            <td style="padding-left:5px;"><label for="">@if (Model.ReportDate != null) {<span>@Model.ReportDate.ToString("dd/MMM/yyyy")</span> } else { <span>N/A</span> }</label></td>
                        </tr>
                        <tr>
                            <td style="padding-left:5px;font-weight:bold; color-adjust:exact; background:#c0c0c0;" >Unique ID</td>
                            <td style="padding-left:5px;"><label for="">@Model.CandidateCode</label></td>
                            <td style="padding-left:5px;font-weight:bold; color-adjust:exact; background:#c0c0c0;" >Applicant ID</td>
                            <td style="padding-left:5px;"><label for="">@Model.EmploymentId</label></td>
                        </tr>
                        <tr>
                            <td style="padding-left:5px;font-weight:bold; color-adjust:exact; background:#c0c0c0;" >Location</td>
                            <td style="padding-left:5px;"><label for="">@Model.Location</label></td>
                            <td style="padding-left:5px;font-weight:bold; color-adjust:exact; background:#c0c0c0;" >Color Code</td>
                            <td style="padding-left:5px; color-adjust:exact; background:@Model.FinalColorCode;" align="center"><label for="">@Model.FinalColor</label></td>
                        </tr>
                        <tr>
                            <td style="padding-left:5px;font-weight:bold; color-adjust:exact; background:#c0c0c0;" >Date of Birth</td>
                            <td style="padding-left:5px;"><label for=""> @if (Model.DOB != null) { <span>@Model.DOB.ToString("dd/MMM/yyyy")</span> } else { <span>N/A</span> } </label></td>
                            <td style="padding-left:5px;font-weight:bold; color-adjust:exact; background:#c0c0c0;" >Contact number of Employee</td>
                            <td style="padding-left:5px;"><label for="">@Model.MobileNo</label></td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td height="30">&nbsp;</td>
            </tr>
            <tr>
                <td align="center">
                    <img src='@Url.Content("~/Images/twocolor.jpg")' width="265" />
                </td>
            </tr>
        </table>
    </td>
</tr>